<div id="home-upcoming">
  <h1>Upcoming Events</h1>
  {% for event in upcoming %}
    <div class="event">
      <h2>{{event.name}}</h2>
      <h3>
        <span>{{event.date}}</span>
        {% if event.website %}
          <span>&bull;</span>
          <a href="{{event.website}}">Visit website</a>
        {% endif %}
      </h3>
      <p>{{event.description}}</p>
    </div>
  {% endfor %}
</div>