<div id="upcoming">
  <h1>Upcoming Events</h1>
  {% for event in upcoming %}
    <div class="event">
      <h2>{{event.name}}</h2>
      <h3>
        <span>{{event.date}}</span>
        {% if event.website %}
          <span>&bull;</span>
          <a href="{{event.website}}">Visit website</a>
        {% endif %}
      </h3>
      <p>{{event.description}}</p>
    </div>
  {% endfor %}
</div>

<style>
#upcoming h1 {
  margin: 2rem 0 1rem;
  font-family: 'IBM Plex Sans', sans-serif;
  color: var(--pink);
  font-size: 2rem;
}
#upcoming .event {
  background: var(--blue);
  padding: 1em;
  color: white;
  border-radius: 0.5em;
  box-shadow: 0 0 0.5em rgba(0, 0, 0, 0.25);
}

#upcoming .event:not(:last-child) {
  margin-bottom: 1em;
}

#upcoming .event h2 {
  font-family: 'IBM Plex Sans', sans-serif;
}

#upcoming a {
  color: inherit;
}

#upcoming p {
  margin-top: 1em;
}
</style>