<div class='mt-10 mb-8'>
  <h2 class="text-center tracking-tight leading-2 font-extrabold text-gray-900 text-2xl sm:leading-none sm:text-3xl md:text-5xl p-4">You Got This Events</h2>
  <div class="grid grid-cols-1 gap-4 max-w-screen-xl mx-auto p-4 mt-5 sm:grid-cols-2 lg:grid-cols-3">
    {% for event in events %}
      <a class="max-w rounded overflow-hidden shadow-lg border border-gray-200 
      {% if event.upcoming %}bg-indigo-600 text-white{% else %}bg-indigo-100{% endif %}" 
      {% if event.url %}href="{{event.url}}"{% endif %}>
        <div class="px-6 py-4">
          <div class="font-bold text-xl my-2">
            {{ event.name }} 
            {% if event.url %}ğŸ”—{% endif %}
          </div>
          <div class="pt-2">
            <span class="inline-block rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 {% if event.upcoming %}bg-indigo-100{% else %}bg-white{% endif %}">{{ event.date }}</span>
            <span class="inline-block rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 {% if event.upcoming %}bg-indigo-100{% else %}bg-white{% endif %}">{{ event.location }}</span>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>
