<a class="max-w rounded overflow-hidden shadow-lg border border-gray-200 flex flex-col" href="{{talk.data.page.url}}">
  <div class="px-6 py-4 flex-grow">
    <div class="font-bold text-xl my-2">{{ talk.data.talk.title }}</div>
  </div>
  <div class="flex items-center px-6 pb-6">
    <img class="w-10 h-10 rounded-full mr-4" src="/assets/img/speakers/{{talk.data.speaker.photo}}" alt="Photo of {{talk.data.speaker.name}}">
    <div class="text-sm">
      <p class="text-gray-900 leading-none">{{talk.data.speaker.name}}</p>
      {% if talk.data.speaker.twitter %}
        <p class="text-gray-700">@{{talk.data.speaker.twitter}}</p>
      {% endif %}
    </div>
  </div>
</a>