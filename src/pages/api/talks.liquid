---
permalink: /talks.json
eleventyExcludeFromCollections: true
---
[
  {% for talk in collections.talks %}
    {% assign t = talk.data %}
    {
        "talk": {{t.talk}},
        "speaker": {
            "name": "{{t.speaker.name}}",
            "bio": "{{t.speaker.bio}}",
            {% if t.speaker.twitter %}
                "twitter": "{{t.speaker.twitter}}",
            {% endif %}
            "photo": "{{site.baseURL}}/assets/img/people/{{t.speaker.photo}}"
        },
        "url": "{{site.baseURL}}{{talk.url}}",
        "video": "https://stream.mux.com/{{t.video}}.m3u8",
        "slug": "{{talk.fileSlug}}"
    }{% if forloop.last == false %},{% endif %}
  {% endfor  %}
]
